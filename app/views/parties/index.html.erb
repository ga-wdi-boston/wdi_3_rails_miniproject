<h1>Parties</h1>

<table>
  <tr>
    <th>Party</th>
    <th>Goal</th>
    <th>Motto</th>
    <th></th>
  </tr>

  <% @parties.each do |party| %>
  <tr>
    <td><%= link_to party.name, party %></td>
    <td><%= party.goal %></td>
    <td><%= party.motto %></td>
    <td><%= link_to "Disband", party_path(party.id), method: :delete %></td>
  </tr>
  <% end %>
</table>

