<p>
  <h3><strong>Question:</strong></h3>
  <h2><%= @topic.question %></h2>
  <h6><%= @topic.name %><br></h6>
</p>

<br>


<% if @topic.comments.any? %>
  <h3>Comments:</h3>


<% @topic.comments.each do |comment| %>
<p>
  <h4><%= comment.body %><br></h4>
  <h6><%= comment.commenter %></h6>
</p>
<% end %>
<% end %>


<br>

<div id="form_color">
<h4>Help <%= @topic.name %> with your answer:</h4>
<%= form_for([@topic, @topic.comments.build]) do |f| %>

  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit :Post, class: 'btn btn-primary btn-large' %><br>
  </p>
<% end %>
</div>

<br>

<%= link_to 'Back', topics_path %>


