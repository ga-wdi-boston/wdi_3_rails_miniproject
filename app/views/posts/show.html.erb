<!-- page for showing the posts and comments associated with it. -->
<div class="form">
	<h1 id="title"><%= @post.title %></h1>
	<hr>
	
	<h2 id="author"><%= @post.author %></h2>
	
	<p id="content"><%= @post.content %></p>
	<!-- iterates through all the comments for specific posts and displays it on the browser -->
	<hr>
	<% @comments.each do |comment| %>
		<p> + <%= comment.comment %> <%= link_to 'Delete', comment_path(comment), method: :delete, class: 'delete' %></p><hr> 
	<% end %>
	
	
	<%= render 'comments/form' %>
	
	<br>
	<%= link_to "<<Back", posts_path, class: 'button' %>
</div>